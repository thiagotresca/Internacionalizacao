<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="MainActivity">

    <TextView
        android:id="@+id/textViewPais"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/country_name"
        android:textSize="@dimen/textSize" />

    <ImageView
        android:id="@+id/imageViewBandeira"
        android:layout_width="@dimen/imageSize"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:contentDescription="@string/country_name"
        app:srcCompat="@drawable/bandeira" />

    <ImageView
        android:id="@+id/imageViewComida"
        android:layout_width="@dimen/imageSize"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:contentDescription="@string/comida"
        app:srcCompat="@drawable/comida" />

    <TextView
        android:id="@+id/textViewComida"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/comida"
        android:textSize="@dimen/textSize" />

</LinearLayout>